#!/bin/bash
# Script: apiAutomation-0x00
# Objective: Fetch Pokémon data (Pikachu) and save to data.json

# Define the API endpoint
URL="https://pokeapi.co/api/v2/pokemon/pikachu"

# Output files
OUTPUT_FILE="data.json"
ERROR_FILE="errors.txt"

# Make the API request
response=$(curl -s -w "%{http_code}" -o "$OUTPUT_FILE" "$URL")

# Check if the status code is 200 (OK)
if [ "$response" -eq 200 ]; then
  echo "✅ Data successfully saved to $OUTPUT_FILE"
else
  echo "❌ Failed to fetch data. Status code: $response" | tee -a "$ERROR_FILE"
fi
